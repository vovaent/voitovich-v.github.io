/* -== typography ==- */
body {
  font-family: "Montserrat-Medium", "Montserrat", Helvetica, Arial, sans-serif;
  font-weight: 400;
  background: var(--base-light-color);
  -webkit-user-select: none;
  -webkit-tap-highlight-color: rgba(255,255,255,0);
}
a {
  text-decoration: none;
  outline: none;
  color: inherit;
  &:focus,
  &:visited,
  &:active {
    outline: none;

  }
}

ul, p {
	padding: 0;
	margin: 0;
	list-style: none;
}